@{
    ViewData["Title"] = "Contact";
}

<body>
    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
            <div class="container">
                <br><br>
                <h1 class="header center purple-text text-accent-3">Contact StarPing</h1>
                <div class="row center">
                    <h5 class="header col s12 light">
                        Have questions, suggestions, or need support? Our team is here to help you 24/7. Reach out and let’s connect.
                    </h5>
                </div>
                <br><br>
            </div>
        </div>
        <div class="parallax"><img src="~/starsVertical.png" alt="Background"></div>
    </div>

    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m6">
                    <div class="card small purple accent-3">
                        <div class="card-content">
                            <span class="card-title">Get in Touch</span>
                            <p><strong>Email:</strong> starping-support@interia.pl</p>
                            <p><strong>Phone:</strong> +48 421 376 988</p>
                            <p><strong>Address:</strong> StarPing HQ, Galaxy Street 42, Warsaw</p>
                        </div>
                    </div>
                </div>

                <div class="col s12 m6">
                    <div class="card small">
                        <div class="card-content">
                            <span class="card-title black-text">Send us a Message</span>
                            <form method="post" action="/Contact/Send">
                                <div class="input-field">
                                    <input id="email" name="email" type="email" class="validate" required>
                                    <label for="email">Your Email</label>
                                </div>
                                <div class="input-field">
                                    <textarea id="message" name="message" class="materialize-textarea" required></textarea>
                                    <label for="message">Your Message</label>
                                </div>
                                <button class="btn waves-effect waves-light purple accent-3" type="submit" name="action">
                                    Send
                                    <i class="material-icons right">send</i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="parallax-container valign-wrapper">
        <div class="section no-pad-bot">
            <div class="container">
                <div class="row center">
                    <h5 class="header col s12 light">
                        Whether you’re a customer or just curious — we’d love to hear from you!
                    </h5>
                </div>
            </div>
        </div>
        <div class="parallax"><img src="~/starsVertical.png" alt="Background"></div>
    </div>

    <footer class="page-footer purple accent-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Get Support</h5>
                    <p class="grey-text text-lighten-4">
                        Our support team is available around the clock to assist you with any issues or questions.
                    </p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="white-text" href="#">Home</a></li>
                        <li><a class="white-text" href="#">Pricing</a></li>
                        <li><a class="white-text" href="#">Network Status</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Reach Us</h5>
                    <ul>
                        <li><a class="white-text" href="#">support@starping.com</a></li>
                        <li><a class="white-text" href="#">+48 123 456 789</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container white-text">
                © 2025 StarPing. All rights reserved.
            </div>
        </div>
    </footer>
</body>
