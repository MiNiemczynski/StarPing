@{
    ViewData["Title"] = "About us";
}

<body>
    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
            <div class="container">
                <br><br>
                <h1 class="header center purple-text text-accent-3">About StarPing</h1>
                <div class="row center">
                    <h5 class="header col s12 light">
                        At StarPing, we are committed to delivering fast, stable, and uninterrupted internet for both individual and business customers. Our cutting-edge technology and professional service ensure seamless connectivity for all your needs.
                    </h5>
                </div>
                <br><br>
            </div>
        </div>
        <div class="parallax"><img src="~/starsVertical.png" alt="Background"></div>
    </div>

    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m6">
                    <div class="card purple accent-3">
                        <div class="card-image hoverable">
                            <img src="~/mission.jpg" class="responsive-img">
                            <span class="card-title"><h3>Our Mission</h3></span>
                        </div>
                        <div class="card-content">
                            <p>
                                Our mission is to provide high-speed, secure, and reliable internet services that empower individuals and businesses to thrive in the digital world. With 24/7 support and cutting-edge infrastructure, we are redefining online connectivity.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="card purple accent-3">
                        <div class="card-image hoverable">
                            <img src="~/value.jpg" class="responsive-img">
                            <span class="card-title"><h3>Our Values</h3></span>
                        </div>
                        <div class="card-content">
                            <p>
                                StarPing values innovation, reliability, and customer satisfaction. We continuously evolve to provide the best internet solutions, ensuring security, speed, and an exceptional user experience.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="section">
            <div class="row center">
                <h4>Meet Our Team</h4>
                <p class="light">Our dedicated professionals work tirelessly to deliver an outstanding internet experience. Get to know the people behind StarPing.</p>
            </div>
        </div>
    </div>

    <div class="parallax-container valign-wrapper">
        <div class="section no-pad-bot">
            <div class="container">
                <div class="row center">
                    <h5 class="header col s12 light">
                        Join thousands of satisfied customers and experience StarPing’s high-speed internet today!
                    </h5>
                </div>
            </div>
        </div>
        <div class="parallax"><img src="~/starsVertical.png" alt="Background"></div>
    </div>

    <footer class="page-footer purple accent-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">About StarPing</h5>
                    <p class="grey-text text-lighten-4">
                        We combine advanced technology with professional service, providing a stable and ultra-fast connection at home and in the office.
                    </p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Quick Links</h5>
                    <ul>
                        <li><a class="white-text" href="#">Careers</a></li>
                        <li><a class="white-text" href="#">Privacy Policy</a></li>
                        <li><a class="white-text" href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Contact Us</h5>
                    <ul>
                        <li><a class="white-text" href="#">Support</a></li>
                        <li><a class="white-text" href="#">Business Inquiries</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container white-text">
                Copyright © 2025 StarPing
            </div>
        </div>
    </footer>
</body>
